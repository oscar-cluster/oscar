use strict;

my @allrpms;
my @temp;
my $rpm;

if (-f "$ARGV[0]/config.xml")
{
	#file exhists, all is good with the world
	#print "file exhists, all is goodness\n";
	exit (0); #do nothing
	
}
else
{
	print "A config.xml file not found for package:$ARGV[1]\n";
	if (-d "$ARGV[0]/RPMS" )
	{
		print "Found an RPMS directory\n";
		opendir(RPMSDIR, "$ARGV[0]/RPMS") or die "could not opendir:$!";
		@temp = readdir(RPMSDIR);
		@allrpms = grep( !/^\.{1,2}$/, @temp);
		closedir(RPMSDIR);
	}

	open(OUTFILE, "> $ARGV[0]/config.xml") or die "can't open OUTFILE:$!\n";
	print OUTFILE "<?xml version=\"1.0\" encoding=\"ISO-8859-1\"?>\n";
	print OUTFILE "<!DOCTYPE package SYSTEM \"../package.dtd\">\n";
	print OUTFILE "<!--  WARNING:MACHINE GENERATED BY $ENV{OSCAR_HOME}/scripts/gen_simple_client_xml_file  -->\n";
	print OUTFILE "<oscar>\n";
	print OUTFILE "  <name>$ARGV[1]</name>\n";
	print OUTFILE "  <class>third-party</class>\n";
	print OUTFILE "  <rpmlist>\n";
	foreach $rpm (@allrpms)
	{
		print OUTFILE "      <rpm>$rpm</rpm>\n";
	}
	print OUTFILE "  </rpmlist>\n";
	
	print OUTFILE "</oscar>\n";

	close(OUTFILE);
	print "Created simple config.xml file for package:$ARGV[1]\n";
}
