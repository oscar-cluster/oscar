use strict;
use lib "$ENV{OSCAR_HOME}/lib","/usr/lib/systeminstaller";
use SIS::Client;
use Carp;
use File::Copy;
use File::Path;
use File::Basename;
use OSCAR::Package;
use AppConfig;


get_numproc();

my $return = 0;
my @pkgs = list_pkg();
foreach my $pkg (@pkgs) {
    if(!run_pkg_script($pkg,"post_install",1)) {
        carp("Couldn't run 'post_install' script for $pkg");
        $return++;
    }
}

do_synctime();

if($return) {
    carp("Some of the post install scripts failed, please check your logs for more info");
}
exit($return);


sub get_numproc {
	my @machines=&clientList;
	foreach my $mach (@machines) {
		my $CMD="/usr/bin/ssh -v -n ".$mach->{HOST}." /bin/grep ^processor /proc/cpuinfo";
		print "Gathering processor count from ".$mach->{NAME}.".\n";
		open (CPIPE,"$CMD |") or (carp("Unable to query machine ".$mach->{NAME}),next);
		my $count=0;
		while (<CPIPE>) {
			$count++;
		}
		close(CPIPE);
		if (($count !~ /^[0-9]+$/) || ($count == 0)) {
			carp("Improper count ($count) returned from machine ".$mach->{NAME});
		} else {
			print "Updating database for machine ".$mach->{NAME}.".\n";
			$mach->{NUM_PROCS}=$count;
			$mach->update;
		}
	}

}

# tjn 1/18/02
sub do_synctime {
    my $sync_script = "/etc/cron.daily/synctime.sh";
    open(FH, ">$sync_script") || croak("$!");
    print FH <<EOF;
#!/bin/sh
# tjn 1/18/02
# simple script to sync times for cluster nodes to the headnode (run daily)

cur=`/bin/date \+"%D %T"`
/opt/c3-2.7.2/bin/cexec -c \"date -s \\\\\\"\$cur\\\\\\""

EOF

    close(FH);
    chmod(0550, $sync_script);
    !system("$sync_script") || croak("$!");     # go ahead an run it once

    print "\nSynchronization of Time Successfully Completed!\n";
}


