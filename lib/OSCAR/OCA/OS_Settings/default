# Init directory specific to this distribution
init=/etc/init.d 

# Specifies the name of few packages
nfs_package=nfs
ssh_package=sshd
portmap_package=portmap
dns_package=bind

# Specifies the name of few deamons (obsolete)
ssh_daemon=/etc/init.d/sshd
dhcp_daemon=/etc/init.d/dhcpd
mysql_daemon=/etc/init.d/mysqld
monitord_daemon=/etc/init.d/systemimager-server-monitord
rsyncd_daemon=/etc/init.d/systemimager-server-rsyncd

# Specifies the name of few services
ssh_service=sshd
dhcp_service=dhcpd
mysql_service=mysqld
postresql_service=postgresql
monitor_service=systemimager-server-monitord
rsync_service=systemimager-server-rsyncd
flamethrower_service=systemimager-server-flamethrowerd
bittorrent_service=systemimager-server-bittorrent
tftp_service=atftpd
ftp_service=ftpd
http_service=httpd
dns_service=named
jobmonitor_service=jobmond
jobarchive_service=jobarchived

# Specifies few configuration files
dhcp_leases=/var/lib/dhcp/dhcpd.leases
dhcp_configfile=/etc/dhcp/dhcpd.conf
dns_configfile=/etc/named.conf
gmond_configfile=/etc/ganglia/gmond.conf
gmetad_configfile=/etc/ganglia/gmetad.conf
http_configdir=/etc/httpd/conf.d/
ssh_configfile=/etc/ssh/sshd_config
monitor_configfile=
bittorrent_configfile=/etc/systemimager/bittorrent.conf
flamethrower_configfile=/etc/systemimager/flamethrower.conf
rsync_configfile=
ftp_configfile=
dns_configfile=/etc/named.conf
exports_configfile=/etc/exports
jobmonitor_configfile=/etc/jobmond.conf
jobarchive_configfile=/etc/jobarchived.conf

# Specifies a few directories
postgresql_datadir=/var/lib/pgsql/data
postgresql_bindir=/usr/bin

# For compatibility
exports_file=/etc/exports

