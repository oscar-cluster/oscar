# debian+ubuntu specific settings
# Overwrite few deamons
ssh_daemon=/etc/init.d/ssh
dhcp_daemon=/etc/init.d/isc-dhcp-server

# Overwrite few services
dhcp_service=isc-dhcp-server
mysql_service=mysql
nfs_service=nfs-kernel-server
ssh_service=ssh

# Overwrite few package names
nfs_package=nfs-kernel-server

# Overwrite few config file locations
mysql_configfile=/etc/mysql/my.cnf
postfix_configfile=/usr/lib/postfix/main.cf

# Overwrite a few directories
mysql_configdir=/etc/mysql/
postgresql_datadir=/var/lib/postgresql/9.1/main
postgresql_bindir=/usr/libpostgresql/9.1/bin
