  <name>System Installation Suite</name>

  <version>
    <major>3</major>
    <minor>5</minor>
    <subversion>3</subversion>
    <release>1</release>
    <epoch>1</epoch>
  </version>

  <class>core</class>

  <summary>System Installation Suite</summary>
  <license>GPL</license>
  <group>Application/System</group>
  <url>http://sisuite.org/</url>

  <packager>
    <name>Michael Chase-Salerno</name>
    <email>mchasal@users.sourceforge.net</email>
  </packager>

  <description>The System Installation Suite</description>

  <rpmlist>
      <rpm>systemconfigurator</rpm>
      <rpm>systemimager-common</rpm>
      <rpm>systemimager-client</rpm>
  </rpmlist>

  <rpmlist>
      <filter group="oscar_server"/>
      <rpm>systeminstaller</rpm>
      <rpm>systeminstaller-x11</rpm>
      <rpm>systemimager-server</rpm>
      <!-- 
        systemimager-client is needed on oscar_server as core package
        but isn't resolved by dependencies. Has to stay here!
      /-->
      <rpm>systemimager-client</rpm>
      <rpm>systemimager-flamethrower</rpm>
      <rpm>flamethrower</rpm>
      <rpm>udpcast</rpm>
      <rpm>tftp-server</rpm>
  </rpmlist>

  <rpmlist>
      <filter group="oscar_server"/>
      <filter architecture="i386"/> <!-- this filter does not work! -->
      <filter architecture="i486"/> <!-- this filter does not work! -->
      <filter architecture="i586"/> <!-- this filter does not work! -->
      <filter architecture="i686"/> <!-- this filter does not work! -->
      <!-- rpm>syslinux</rpm -->
      <!-- syslinux cannot be added here, it is handled in prereqs -->
      <!--   - the architecture filter does not work here!         -->
      <!--   - update-rpms won't select it on x86_64               -->
      <rpm>systemimager-i386boot-standard</rpm>
  </rpmlist>

  <rpmlist>
      <filter group="oscar_server"/>
      <filter architecture="x86_64"/> <!-- this filter does not work! -->
      <!-- syslinux cannot be added here, it is handled in prereqs -->
      <rpm>systemimager-x86_64boot-standard</rpm>
  </rpmlist>

  <rpmlist>
      <filter group="oscar_server"/>
      <filter architecture="ia64"/> <!-- this filter does not work! -->
      <rpm>systemimager-ia64boot-standard</rpm>
  </rpmlist>
</oscar>
