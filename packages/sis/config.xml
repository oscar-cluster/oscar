<?xml version="1.0" encoding="ISO-8859-1"?>
<oscar 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:oscar-config="http://sf.net/oscar/2005/config.xml"
  xsi:schemaLocation="http://sf.net/oscar/2005/config.xml oscar-config.xsd"
>
  <!--
      Copyright (c) 2002 The Trustees of Indiana University.  
                         All rights reserved.
      
      This file is part of the OSCAR software package.  For license
      information, see the COPYING file in the top level directory of the
      OSCAR source distribution.
     
      $Id$
  -->
  <name>System Installation Suite</name>

  <version>
    <major>3</major>
    <minor>7</minor>
    <subversion>6</subversion>
    <release>1</release>
    <epoch>1</epoch>
  </version>

  <class>core</class>

  <summary>System Installation Suite</summary>
  <license>GPL</license>
  <group>Application/System</group>
  <uri>http://sisuite.org/</uri>

  <packager>
    <name>Erich Focht</name>
    <email>efocht@hpce.nec.com</email>
  </packager>

  <description>The System Installation Suite is composed of three major components - SystemInstaller, SystemImager and SystemConfigurator</description>

  <binary-package-list>
      <pkg>systemconfigurator</pkg>
      <pkg>systemimager-common</pkg>
      <pkg>systemimager-client</pkg>
  </binary-package-list>

  <!--
      OSCAR clients need the "netcat" package to be able to display
      the "rebooted" status via si_monitortk
  -->
  <!-- begin netcat package -->
  <binary-package-list>
      <filter>
        <group>oscar_clients</group>
        <distribution>
          <name>rhel</name>
        </distribution>
      </filter>

      <filter>
        <group>oscar_clients</group>
        <distribution>
          <name>fc</name>
        </distribution>
      </filter>

      <filter>
        <group>oscar_clients</group>
        <distribution>
          <name>mdv</name>
        </distribution>
      </filter>

      <pkg>nc</pkg>
  </binary-package-list>

  <binary-package-list>
      <filter>
        <group>oscar_clients</group>
        <distribution>
             <name>suse</name>
        </distribution>
      </filter>

      <filter>
        <group>oscar_clients</group>
        <distribution>
            <name>debian</name>
        </distribution>
      </filter>

      <pkg>netcat</pkg>
  </binary-package-list>
  <!-- end netcat package -->

  <binary-package-list>
      <filter>
        <group>oscar_server</group>
      </filter>
      <pkg>systeminstaller-oscar</pkg>
      <pkg>systeminstaller-oscar-x11</pkg>
      <pkg>systemimager-server</pkg>
      <pkg>systemimager-flamethrower</pkg>
      <pkg>systemimager-bittorrent</pkg>
  </binary-package-list>

  <binary-package-list>
      <filter>
        <group>oscar_server</group>
        <distribution>
             <name>mdv</name>
        </distribution>
      </filter>
      <pkg>pxelinux</pkg>
      <pkg>atftp-server</pkg>
      <pkg>perl-forks</pkg>
      <pkg>perl-reaper</pkg>
  </binary-package-list>

  <binary-package-list>
      <filter>
        <group>oscar_server</group>
        <distribution>
             <name>suse</name>
        </distribution>
      </filter>
      <pkg>bittorrent-compat-suse</pkg>
      <pkg>atftp</pkg>
  </binary-package-list>

  <binary-package-list>
      <filter>
        <group>oscar_server</group>
        <distribution>
             <name>rhel</name>
        </distribution>
      </filter>
      <filter>
        <group>oscar_server</group>
        <distribution>
             <name>fc</name>
        </distribution>
      </filter>
      <pkg>atftp-server</pkg>
  </binary-package-list>

  <binary-package-list>
      <filter>
        <group>oscar_server</group>
        <architecture>i386</architecture>
      </filter>
      <filter>
        <group>oscar_server</group>
        <distribution>
            <name>rhel</name>
        </distribution>
      </filter>
      <filter>
        <group>oscar_server</group>
        <distribution>
            <name>fc</name>
        </distribution>
      </filter>
      <filter>
        <group>oscar_server</group>
        <distribution>
            <name>mdv</name>
        </distribution>
      </filter>
      <filter>
        <group>oscar_server</group>
        <distribution>
            <name>suse</name>
        </distribution>
      </filter>
      <pkg>syslinux</pkg>
      <pkg>systemimager-i386boot-standard</pkg>
      <pkg>systemimager-i386initrd_template</pkg>
  </binary-package-list>

  <binary-package-list>
    <filter>
        <group>oscar_server</group>
        <architecture>i386</architecture>
        <distribution>
            <name>debian</name>
        </distribution>
    </filter>
    <pkg>systemimager-i386boot-standard</pkg>
    <pkg>systemimager-i386initrd-template</pkg>
  </binary-package-list>

  <binary-package-list>
      <filter>
        <group>oscar_server</group>
        <architecture>ia64</architecture>
      </filter>
      <pkg>systemimager-ia64boot-standard</pkg>
      <pkg>systemimager-ia64initrd_template</pkg>
  </binary-package-list>

  <binary-package-list>
      <filter>
        <group>oscar_server</group>
        <architecture>x86_64</architecture>
      </filter>
      <pkg>syslinux</pkg>
      <pkg>systemimager-x86_64boot-standard</pkg>
      <pkg>systemimager-x86_64initrd_template</pkg>
      <pkg>systemimager-i386boot-standard</pkg>
      <pkg>systemimager-i386initrd_template</pkg>
  </binary-package-list>
</oscar>
