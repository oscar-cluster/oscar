#!/usr/bin/perl
# $Id: post_server_rpm_uninstall,v 1.1 2003/11/05 21:56:45 naughtont Exp $
#
# This file is part of the OSCAR software package.  For license
# information, see the COPYING file in the top level directory of the
# OSCAR source distribution.
#
# server uninstall script
# Must exit with 0 on success or non-zero for any failures.

my @rpms = qw(systemconfigurator
		systemimager-common
		perl-AppConfig
		systemimager-client
		systeminstaller
		systeminstaller-x11
		perl-MLDBM
		syslinux
		systemimager-server
		systemimager-i386boot-standard
		systemimager-flamethrower
		flamethrower
		udpcast
		tftp-hpa
		perl-XML-Simple
		perl-XML-Parser
		);  #skipping rsync
remove_rpms(@rpms);


#-------------------------------------------------------------
#  Input: Array of rpms to remove (short name no version)
# Output: n/a
# Return: 0 (success) otherwise die's  :)
#-------------------------------------------------------------
sub remove_rpms
{
	my @rpms = @_;
	my $cmd = "rpm -e " . join(" ", @rpms);

	my $rc = system($cmd);
	die "Error: command ($cmd)\n" if($rc);

	return(0);
}

#-------------------------------------------------------------
#  Input: Array of fully qualified files to remove
# Output: n/a
# Return: 0 (success) otherwise die's  :)
#-------------------------------------------------------------
sub remove_files
{
    my @files = @_;
    my $rc = 0; 

    foreach my $f (@files) {
        $rc = system("rm -f $f") or die "Error: calling system(): $!\n";
		print "DBG: system( rm -f $f )\n";
        die "Error: command ($cmd)\n" if($rc);
    }
    return(0);
}   

