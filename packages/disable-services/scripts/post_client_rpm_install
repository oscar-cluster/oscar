# OSCAR source distribution.
#
# $Id: post_client_rpm_install,v 1.2 2002/10/25 20:34:53 jsquyres Exp $
#

#
# Move to packages/disable-services/scripts
#

dir="$OSCAR_HOME/packages/disable-services/scripts"
cd "$dir"

#
# Run all the "disable.*" scripts in this directory.
#

for file in `/bin/ls disable.*`; do
    if test -x "$file" -a "`echo $file | egrep -v '~$'`"; then
	chmod +x $file
	"./$file"
    fi
done

# All done

exit 0
