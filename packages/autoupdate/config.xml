  <name>autoupdate</name>

  <version>
    <major>4</major>
    <minor>8</minor>
    <subversion>2</subversion>
    <release>6</release>
    <epoch>1</epoch>
  </version>

  <class>included</class>
  <installable>1</installable>

  <summary>AutoUpdate wrapper for use with OSCAR</summary>
  <license>GPL</license>
  <group>Applications/System</group>
  <url>http://www.mat.univie.ac.at/~gerald/ftp/autoupdate/</url>
  <packager>
    <name>Jason Brechin</name>
    <email>brechin@ncsa.uiuc.edu</email>
  </packager>

  <description>This package contains the script cluster_update, used
on an OSCAR cluster to update the server and clients without having to
worry about autoupdate syntax.</description>

  <rpmlist>
      <filter group="oscar_clients"/>
      <rpm>autoupdate-client</rpm>
  </rpmlist>
  <rpmlist>
      <filter group="oscar_server"/>
      <rpm>autoupdate-oscar</rpm>
      <rpm>autoupdate</rpm>
  </rpmlist>

  <rpmlist>
      <filter group="oscar_server" distribution="redhat" />
      <rpm>perl-DB_File</rpm>
  </rpmlist>

  <rpmlist>
      <filter distribution='suse' />
      <rpm>autoupdate-perl-compat</rpm>
  </rpmlist>

</oscar>
