# TJN: setup script for the apitest package
#      (adapted from Jeff's switcher pkg setup script)
#

use strict;
use lib "$ENV{OSCAR_HOME}/lib";
use POSIX;
use Carp;
use OSCAR::Distro;
use OSCAR::PackageBest;


my $pkg_name = "apitest";
my $source_dir= $ENV{OSCAR_PACKAGE_HOME} . "/distro/";
my $dest_dir = $ENV{OSCAR_PACKAGE_HOME} . "/RPMS";

my ($name, $ver) = OSCAR::Distro::which_distro_server();
if ($name eq "redhat") {
	$source_dir .= "rh";
	if ($ver eq "9") {
		$source_dir .= "9";
	} elsif ($ver eq "3as") {
		#$source_dir .= "3as";
		$source_dir .= "9";
	} else {
	    print "Error - $pkg_name: no support for $name $ver\n";
        exit(1);
	}
} elsif ($name eq "fedora") {
	$source_dir .= "fc";
	if ($ver eq "2") {
		$source_dir .= "2";
	} else {
		print "Error - $pkg_name: no support for $name $ver\n";
		exit(1);
	}
} elsif ($name eq "mandrake") {
	$source_dir .= "mdk";
	if ($ver eq "10.0") {
		$source_dir .= "10";
	} else {
		print "Error - $pkg_name: no support for $name $ver\n";
		exit(1);
	}
} else {
	print "Error - $pkg_name: no support for $name $ver\n";
	exit(1);
}

print "Using $pkg_name RPMs from: $source_dir\n";

# Quick sanity check

if (! -d $dest_dir) {
  croak("$dest_dir does not exist");
} elsif (! -d $source_dir) {
  croak("$source_dir does not exist");
}


# Make a list of the new files and copy them over

opendir(DIR, $source_dir);
my @good_files = grep {/\.rpm$/ && -f "$source_dir/$_" } readdir(DIR);
closedir(DIR);
if ($#good_files > -1) {
  my $cmd = "cp ";
  printf("Copying new files:\n");
  foreach my $file (@good_files) {
    $cmd .= "$source_dir/$file ";
    printf(" - $source_dir/$file\n");
  }
  $cmd .= $dest_dir;
  system($cmd);
  print "Copied $pkg_name RPMs to $dest_dir\n";
}

# All done

exit 0
