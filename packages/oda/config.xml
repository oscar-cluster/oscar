  <name>oda</name>

  <version>
    <major>0</major>
    <minor>9</minor>
    <subversion>4</subversion>
    <release>1</release>
    <epoch>1</epoch>
  </version>

  <class>core</class>
  <installable>1</installable>

  <summary>Oscar DAtabase</summary>
  <license>Freely distributable</license>
  <group>Application/Environment</group>

  <packager>
    <name>Neil Gorsuch</name>
    <email>ngorsuch@ncsa.uiuc.edu</email>
  </packager>

  <description>ODA provides a central database for OSCAR.</description>

  <rpmlist>
    <all>
      <rpm>mysql</rpm>
      <rpm>perl-DBD-MySQL</rpm>
      <rpm>perl-DBI</rpm>
      <rpm>oda</rpm>
    </all>
    <server>
      <rpm>mysql-server</rpm>
    </server>
  </rpmlist>

  <package>
    <oda>
        <!--
	This definition allows easier reading and
	modifying of records in the "packages" table

        To list all package names:
            oda packages
    
        To list the package names for all packages:
            oda packages packager_name
    
        To list the package names and packager email
	of all installable packages:
            oda packages installable=1 packager_email
    
        To list the package names of all installable
	packages that are in the included class:
            oda packages class=included installable=1
    
        To change the packager email address for package foo:
            oda packages name=foo packager_email~new_email@newplace.com
    
        To list all the packages that require a particular thing:
            oda packages-that-require required_thing_name
    
        To list all the things that a particular package requires:
            oda this-package-requires package_name
	 -->
        <shortcut> packages read_records|modify_records packages name %+ </shortcut>
        <shortcut> packages_that_require read_records packages_requires package name=%1 </shortcut>
        <shortcut> this_package_requires read_records packages_requires name package=%1 </shortcut>
        <!--
        This defines the second field name for records in 
	the packages_rpmlist which can't be surmised from 
	the xml structure. If there were more than one 
	field name that needed to be specified for a 
	particular table, they would be specified all on 
	the same line.
        -->
        <fieldnames> packages_rpmlist scope </fieldnames>
     </oda>
  </package>
</oscar>
