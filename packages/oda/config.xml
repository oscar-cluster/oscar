	<shortcut> provided_by_package read_records packages_provides packages_provides.package=%1 packages_provides.name %+ </shortcut>
	<shortcut> remove_all_package_sets_from_package_set delete_records package_sets_included_package_sets package_sets.name=%1 package_sets.id=package_sets_included_package_sets.included_package_set_id </shortcut>
