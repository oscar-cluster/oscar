#   Foundation, Inc., 59 Temple Place, Suite 330, Boston, MA  02111-1307  USA

#   PBS Server Preparation script
#   Sean Dague <japh@us.ibm.com>

system("/usr/local/pbs/sbin/pbs_server -t create");
system("/usr/bin/killall pbs_server");
system("/sbin/chkconfig pbs_sched off");

# create configuration & nodes file from LUI database
cd config
./config_server
if [ $? -ne 0 ]; then SUCCESS=0; fi

# configure server and scheduler
/etc/rc.d/init.d/pbs_server start
if [ $? -eq 1 ]; then 
  echo "Unable to start PBS server, you must configure the server"
  echo "and scheduler by hand by issuing the following commands:"
  echo "   /etc/rc.d/init.d/pbs_server start"
  echo "   /usr/local/pbs/bin/qmgr < `pwd`/pbs_server.conf"
else
  /usr/local/pbs/bin/qmgr < pbs_server.conf
  # start MAUI scheduler here
  /etc/rc.d/init.d/maui start
fi

# update xpbs & xpbsmon configurations
./update_xpbs
if [ $? -ne 0 ]; then SUCCESS=0; fi
./update_xpbsmon
if [ $? -ne 0 ]; then SUCCESS=0; fi
cd ..

# done
if [ $SUCCESS -eq 1 ]; then
  exit 0
else
  echo "WARNING: Installation of PBS & Maui incomplete"
  exit 1
fi
