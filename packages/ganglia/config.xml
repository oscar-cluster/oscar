<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE package SYSTEM "../package.dtd">
<oscar>
  <name>Ganglia</name>

  <version>
    <major>3</major>
    <minor>0</minor>
    <subversion>1</subversion>
    <release>2</release>
    <epoch>1</epoch>
  </version>

  <class>included</class>

  <summary>distributed monitoring and execution system</summary>
  <license>freely distributable</license>
  <group>Application/System</group>
  <url>http://ganglia.sourceforge.net</url>

  <maintainer>
    <name>Matt Massie</name>
    <email>massie@cs.berkeley.edu</email>
  </maintainer>

  <packager>
    <name>Bernard Li</name>
    <email>bli@bcgsc.ca</email>
  </packager>

  <description>Ganglia is a scalable distributed monitoring system for high-performance computing systems such as clusters and Grids.</description>

  <rpmlist>
      <rpm>ganglia-gmond</rpm>
  </rpmlist>  

  <rpmlist>
      <filter group="oscar_server" distribution="fedora" distribution_version="2" />
      <filter group="oscar_server" distribution="fedora" distribution_version="3" />
      <filter group="oscar_server" distribution="redhat" />
      <filter group="oscar_server" distribution="mandrake" distribution_version="10.0" />
      <filter group="oscar_server" distribution="mandrake" distribution_version="10.1" />
      <rpm>ganglia-gmetad</rpm>
      <rpm>ganglia-web</rpm>
      <rpm>rrdtool</rpm>
  </rpmlist>

  <rpmlist>
      <filter group="oscar_server" distribution="fedora" distribution_version="3" />
      <filter group="oscar_server" distribution="redhat" distribution_version="el4" />
      <rpm>php-gd</rpm>
  </rpmlist>

  <servicelist>
      <service>gmond</service>
  </servicelist>

  <servicelist>
      <filter group="oscar_server"/>
      <service>gmetad</service>
  </servicelist>
</oscar>
