# This script removes the Ganglia RPMs from the server
# Must exit with 0 on success or non-zero for any failures

# (C)opyright Bernard Li <bli@bcgsc.ca>

my @rpms = qw(ganglia-monitor-core-gmetad ganglia-webfrontend ganglia-oscar-monitor-core-gmond rrdtool);
remove_rpms(@rpms);

#-------------------------------------------------------------
#  Input: Array of rpms to remove (short name no version)
# Output: n/a
# Return: 0 (success) otherwise die 
#-------------------------------------------------------------
sub remove_rpms
{
        my @rpms = @_;
        my $cmd = "rpm -e " . join(" ", @rpms);
        my $rc = 0;     

        $rc = system($cmd);
        die "Error: command ($cmd)\n" if($rc);

        return(0);
}
