BEGIN {
    if (defined $ENV{OSCAR_HOME}) {
        unshift @INC, "$ENV{OSCAR_HOME}/lib";
    }
}

use strict;
use warnings "all";
use OSCAR::Package;
use OSCAR::SystemServices;
use OSCAR::SystemServicesDefs;


# Note that we do not care if "stop" does not work, we just want to be sure the service is stopped.
system_service(GANGLIA_GMOND,STOP);

my $pkgdir = OSCAR::Package::get_scripts_dir("ganglia", "post_server_install");

my $cmd = "$pkgdir/edit_ganglia_conf --gmond --verbose";
if (system($cmd)) {
    die "ERROR: Impossible to execute $cmd";
}

$cmd = "$pkgdir/edit_ganglia_conf --gmetad --verbose";
if (system($cmd)) {
    die "ERROR: Impossible to execute $cmd";
}

exit 0;
