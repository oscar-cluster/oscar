gang=/usr/sbin/ganglia

if [ -x $gang ]; then
    $gang >&-
    if [ $? != 0 ]; then
	$OSCAR_TESTPRINT -l "Ganglia" -s  "gmond not available - is it running?" -f
	exit 1
    else
	howmany=$($gang noacounthosts | wc -l)
	$OSCAR_TESTPRINT -l "Ganglia" -s  "$howmany hosts responded" -p
    fi
else
    $OSCAR_TESTPRINT -l "Ganglia" -s  "$gang not found" -f
fi

