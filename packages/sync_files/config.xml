<?xml version="1.0" encoding="ISO-8859-1"?>
<oscar 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:oscar-config="http://sf.net/oscar/2005/config.xml"
  xsi:schemaLocation="http://sf.net/oscar/2005/config.xml oscar-config.xsd"
>
  <!--
      
      This file is part of the OSCAR software package.  For license
      information, see the COPYING file in the top level directory of the
      OSCAR source distribution.
     
      $Id: config.xml,v 1.4 2004/12/03 22:06:12 brechin Exp $
  -->
  <name>File Synchronization</name>

  <version>
    <major>1</major>
    <minor>7</minor>
    <release>1</release>
  </version>

  <class>core</class>

  <summary>OSCARized File Synchronization System</summary>
  <license>GPL</license>
  <group>System Environment/Base</group>
  <packager>
    <name>Jason Brechin</name>
    <email>brechin@ncsa.uiuc.edu</email>
  </packager>

  <description>The OSCAR File Synchronization System keeps any list of files
    synchronized from the the central OSCAR server out to the
    OSCAR compute nodes.
  </description>

  <binary-package-list>
      <filter>
        <group>oscar_server</group>
        <distribution>
          <name>redhat</name>
        </distribution>
      </filter>

      <filter>
        <group>oscar_server</group>
        <distribution>
          <name>fedora</name>
        </distribution>
      </filter>

      <filter>
        <group>oscar_server</group>
        <distribution>
          <name>mandrake</name>
        </distribution>
      </filter>

      <pkg>sync_files</pkg>
      <pkg>crontabs</pkg>
  </binary-package-list>
  <binary-package-list>
      <filter>
        <group>oscar_server</group>
        <distribution>
          <name>suse</name>
        </distribution>
      </filter>

      <pkg>sync_files</pkg>
      <pkg>cron</pkg>
  </binary-package-list>

</oscar>
