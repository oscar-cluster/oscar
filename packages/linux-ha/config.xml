<?xml version="1.0" encoding="ISO-8859-1"?>
<oscar>
  <name>linux-ha</name>
  <class>third-party</class>
  <summary>High availability base setup</summary>
  <description>
This package installs the heartbeat RPMs and provides scripts for
installing the high availability feature for OSCAR masters.
</description>
  <license>GPL</license>
  <group>System</group>
  <authors>
    <author cat="maintainer">
      <name>Erich Focht</name>
      <email>efocht@hpce.nec.com</email>
    </author>
  </authors>
  <serverDeps>
    <requires>
      <pkg>heartbeat</pkg>
      <pkg>heartbeat-pils</pkg>
      <pkg>heartbeat-stonith</pkg>
    </requires>
  </serverDeps>
  <clientDeps>
    <requires>
      <pkg>heartbeat</pkg>
      <pkg>heartbeat-pils</pkg>
      <pkg>heartbeat-stonith</pkg>
    </requires>
  </clientDeps>
  <apiDeps/>
