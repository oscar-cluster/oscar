<?xml version="1.0" encoding="utf-8"?>

<testDef>

  <info>
     Check that the PVM_ARCH environment variable is set.
  </info>
  <!--
     TODO Add a call to uname to check the actual value
          of PVM_ARCH, for now just checking it is set
          to something.
    -->

  <test type="script">

    <command interpreter="/bin/sh" wdir="/tmp">
echo "$PVM_ARCH"
exit 0
    </command>

    <output name="stdout" format="regexp">.*</output>
    <output name="stderr" format="literal"></output>
    <output name="status" format="literal">0</output>

  </test>

</testDef>
