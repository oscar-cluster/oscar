# This script does cleanup for the SGE package on the client nodes
# Must exit with 0 on success or non-zero for any failures

# (C)opyright Bernard Li <bli@bcgsc.ca>

use Carp;
#use File::Glob;

my $sge_dir = "/opt/sge";
my $rm_detect_dir = "$ENV{OSCAR_HOME}/lib/OSCAR/OCA/RM_Detect";

# Remove profile.d scripts
unlink </etc/profile.d/sge.*> or croak("Failed to delete SGE profile.d files");

# Clean up /opt/sge directory (there may have been some cruft and RPM may
# not be able to clean it up correctly
system("rm -rf $sge_dir") == 0 or croak("Failed to remove $sge_dir");

exit 0;
