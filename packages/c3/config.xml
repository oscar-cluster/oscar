<?xml version="1.0" encoding="ISO-8859-1"?>
<oscar>
  <name>c3</name>
  <class>core</class>
  <summary>Cluster Command and Control (C3) - command line tool suite</summary>
  <description>The Cluster Command and Control (C3) tool suite
offers a command line interface for system and user administration
tasks on a cluster.</description>
  <license>Freely distributable</license>
  <group>Application/System</group>
  <uri>http://www.csm.ornl.gov/torc/C3/</uri>
  <authors>
    <author cat="maintainer">
      <name>Thomas Naughton</name>
      <email>naughtont@ornl.gov</email>
    </author>
    <author cat="uploader">
      <name>Geoffroy Vallee</name>
      <email>valleegr@ornl.gov</email>
    </author>
  </authors>
  <serverDeps>
    <requires>
      <filters>
        <dist>rhel</dist>
        <dist>mdv</dist>
        <dist>suse</dist>
        <dist>fc</dist>
        <dist>ydl</dist>
      </filters>
      <pkg>c3</pkg>
      <pkg>c3-profiled</pkg>
    </requires>
    <requires>
      <filters>
        <dist>debian</dist>
      </filters>
      <pkg>c3</pkg>
    </requires>
  </serverDeps>
  <clientDeps>
    <requires>
      <filters>
        <dist>rhel</dist>
        <dist>mdv</dist>
        <dist>suse</dist>
        <dist>fc</dist>
        <dist>ydl</dist>
      </filters>
      <pkg>c3</pkg>
      <pkg>c3-profiled</pkg>
    </requires>
    <requires>
      <filters>
        <dist>debian</dist>
      </filters>
      <pkg>c3</pkg>
    </requires>
  </clientDeps>
  <apiDeps>
  </apiDeps>
