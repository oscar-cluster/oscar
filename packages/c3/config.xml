  <name>C3</name>

  <version>
    <major>4</major>
    <minor>0</minor>
    <subversion>1</subversion>
    <release>5</release>
    <epoch>1</epoch>
  </version>

  <class>core</class>

  <summary>Cluster Command and Control (C3) - command line tool suite</summary>
  <license>Freely distributable</license>
  <group>Application/System</group>
  <uri>http://www.csm.ornl.gov/torc/C3/</uri>

  <packager>
    <name>Thomas Naughton</name>
    <email>naughtont@ornl.gov</email>
  </packager>

  <description>The Cluster Command and Control (C3) tool suite
offers a command line interface for system and user administration
tasks on a cluster.</description>

  <binary-package-list>
      <filter>
        <distribution>
            <name>rhel</name>
        </distribution>
      </filter>

      <filter>
        <distribution>
            <name>mdv</name>
        </distribution>
      </filter>

      <filter>
        <distribution>
            <name>suse</name>
        </distribution>
      </filter>

      <filter>
        <distribution>
            <name>fc</name>
        </distribution>
      </filter>

      <pkg>c3</pkg>
      <pkg>c3-profiled</pkg>
  </binary-package-list>

  <binary-package-list>
      <filter>
        <distribution>
            <name>debian</name>
        </distribution>
      </filter>
      <pkg>c3</pkg>
  </binary-package-list>

  <binary-package-list>
      <filter>
        <group>oscar_clients</group>
        <distribution>
            <name>rhel</name>
        </distribution>
      </filter>

      <filter>
        <group>oscar_clients</group>
        <distribution>
            <name>mdv</name>
        </distribution>
      </filter>

      <filter>
        <group>oscar_clients</group>
        <distribution>
            <name>suse</name>
        </distribution>
      </filter>

      <filter>
        <group>oscar_clients</group>
        <distribution>
            <name>fc</name>
        </distribution>
      </filter>

      <pkg>c3-ckillnode</pkg>
      <pkg>c3-c3cmd-filter</pkg>
  </binary-package-list>

  <binary-package-list>
      <filter>
        <group>oscar_clients</group>
        <distribution>
            <name>debian</name>
        </distribution>
      </filter>

      <pkg>c3-ckillnode</pkg>
  </binary-package-list>

 
