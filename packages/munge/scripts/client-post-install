# Purpose: client-post-install for munge (run after )
# Register and enable the munge service on the client image.


# Registers the munge service in the client image
if /sbin/chkconfig --add munge
then
	echo "MUNGE: client-post-install => registering the munge service in the client image"
else
	echo "ERROR: MUNGE: client-post-install: Unable to register the munge service in the client image"
fi

# Enable the service
if /sbin/chkconfig munge on
then
	echo "MUNGE: client-post-install => enabling the munge service in the client image"
else
	echo "ERROR: MUNGE: client-post-install: unabling the munge service failed in the client image"
fi
