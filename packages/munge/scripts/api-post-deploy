# Purpose: api-post-deploy for munge (run during step 7)
# Start the munge service on nodes.

BEGIN {
    if (defined $ENV{OSCAR_HOME}) {
        unshift @INC, "$ENV{OSCAR_HOME}/lib";
    }
}

use Carp;
use OSCAR::SystemServices;
use OSCAR::SystemServicesDefs;

# Start the munge service.
!remote_system_service(MUNGE,START,"/usr/bin/cexec")
    or die "ERROR: Couldn't restart gmondi on all nodes.";

# Succeffully configured munge.
print("[INFO] successfully started munge daemon on all nodes\n");

exit 0;
