# Purpose: api-post-deploy for munge (run after STEP7)
# Restarts the service in case it was not already running. (should not be necesssary)

# Start munge service
if /sbin/service munge restart
then
	echo "MUNGE: api-post-deploy => restarting the munge service"
else
	echo "ERROR: MUNGE: api-post-deploy: Unable to restart the munge service"
fi
