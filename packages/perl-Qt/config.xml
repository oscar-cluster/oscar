  <name>perl-Qt</name>


  <version>
    <major>3</major>
    <minor>0</minor>
    <subversion>6</subversion>
    <release>6</release>
  </version>

  <class>core</class>

  <summary>Qt bindings for Perl</summary>
  <license>GPL</license>
  <packager>
    <name>Jason Brechin</name>
    <email>brechin@ncsa.uiuc.edu</email>
  </packager>

  <description>Perl-Qt allows for writing Qt programs in Perl</description>

  <rpmlist>
    <filter distribution='mandrake' group='oscar_server'/>
    <rpm>perl-Qt-mdk10</rpm>
    <rpm>libsmokeqt1</rpm>
  </rpmlist>

  <rpmlist>
<!-- For distros with Perl 5.8 -->
    <filter distribution='fedora'   group='oscar_server'/>
    <filter distribution='redhat'   group='oscar_server'/>
    <filter distribution='whitebox' group='oscar_server' />
    <filter distribution='suse' group='oscar_server'/>
      <rpm>perl-Qt</rpm>
  </rpmlist>

  <rpmlist>
    <filter distribution='suse' group='oscar_server'/>
      <rpm>perl-Qt-qt3-compat</rpm>
  </rpmlist>

</oscar>
