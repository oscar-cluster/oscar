  <name>perl-Qt</name>


  <version>
    <major>3</major>
    <minor>0</minor>
    <subversion>6</subversion>
    <release>6</release>
  </version>

  <class>core</class>

  <summary>Qt bindings for Perl</summary>
  <license>GPL</license>
  <packager>
    <name>Jason Brechin</name>
    <email>brechin@ncsa.uiuc.edu</email>
  </packager>

  <description>Perl-Qt allows for writing Qt programs in Perl</description>

  <rpmlist>
    <filter distribution='redhat' />
    <rpm>qt</rpm>
    <rpm>qt-devel</rpm>
    <rpm>cups-libs</rpm>
  </rpmlist>

  <rpmlist>
    <filter distribution='mandrake' distribution_version='9.0'/>
    <rpm>libqt3</rpm>
    <rpm>libqt3-devel</rpm>
    <rpm>libunixODBC2-devel</rpm>
    <rpm>libunixODBC2</rpm>
    <rpm>libmysql10-devel</rpm>
    <rpm>postgresql-devel</rpm>
    <rpm>libcups1</rpm>
    <rpm>perl-Qt-mdk</rpm>
    <rpm>libmng1</rpm>
    <rpm>liblcms1</rpm>
    <rpm>libpgsql2</rpm>
    <rpm>libpgperl</rpm>
    <rpm>libecpg3</rpm>
    <rpm>libpgsqlodbc0</rpm>
    <rpm>postgresql</rpm>
    <rpm>sfio</rpm>
    <rpm>libpgtcl2</rpm>
  </rpmlist>
    
  <rpmlist>
<!-- For distros with Perl 5.6 -->
    <filter distribution='redhat'   distribution_version='7.3' />
    <filter distribution='redhat'   distribution_version='7.2' />
    <filter distribution='mandrake' distribution_version='8.2' />
    <filter distribution='rhas'   distribution_version='2.1AS' />
      <rpm>perl-Qt-5.6</rpm>
  </rpmlist>

  <rpmlist>
<!-- For distros with Perl 5.8 -->
    <filter distribution='redhat'   distribution_version='8.0' />
    <filter distribution='redhat'   distribution_version='9' />
    <filter distribution='suse' />
      <rpm>perl-Qt</rpm>
  </rpmlist>

  <rpmlist>
    <filter distribution='suse' />
      <rpm>xdevel</rpm>
      <rpm>qt3</rpm>
      <rpm>qt3-devel</rpm>
      <rpm>perl-Qt-qt3-compat</rpm>
  </rpmlist>

</oscar>
