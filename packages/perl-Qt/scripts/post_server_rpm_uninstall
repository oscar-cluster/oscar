#!/usr/bin/perl
# $Id: post_server_rpm_uninstall,v 1.1 2003/11/05 21:56:45 naughtont Exp $
#
# This file is part of the OSCAR software package.  For license
# information, see the COPYING file in the top level directory of the
# OSCAR source distribution.
#
# server uninstall script
# Must exit with 0 on success or non-zero for any failures.

use lib "$ENV{OSCAR_HOME}/lib";
use OSCAR::Distro;   # Run on server so have access to libs

my ($distro, $ver) = which_distro_server();

if( $distro eq "redhat" ) {
	my @rpms = qw(qt
			qt-devel
			cups-libs
			);
	remove_files(@rpms);

}
elsif( ($distro eq "mandrake") && ($ver eq "9.0") ) {
	my @rpms = qw(libqt3
			libqt3-devel
			libunixODBC2-devel
			libunixODBC2
			libmysql10-devel
			postgresql-devel
			libcups1
			perl-Qt-mdk
			libmng1
			liblcms1
			libpgsql2
			libpgperl
			libecpg3
			libpgsqlodbc0
			postgresql
			sfio
			libpgtcl2
			);
	remove_files(@rpms);

}
elsif( ($distro eq "mandrake") && ($ver eq "9.0") ) {
	my @rpms = qw(libqt3
			libqt3-devel
			libunixODBC2-devel
			libunixODBC2
			libmysql12-devel
			postgresql-devel
			libcups2
			perl-Qt-mdk
			libpq3
			libmng1
			liblcms1
			libecpg3
			postgresql
			sfio
			libpgtcl2
			);
	remove_rpms(@rpms);

}
elsif( ($distro eq "mandrake") && ($ver eq "9.2") ) {
	my @rpms = qw(libqt3
			libqt3-devel
			libunixODBC2-devel
			libunixODBC2
			libmysql12-devel
			postgresql-devel
			libcups2
			perl-Qt-mdk
			libpq3
			libmng1
			liblcms1
			libecpg3
			postgresql
			sfio
			libpgtcl2
			);
	remove_rpms(@rpms);

}

# For distros with Perl 5.6
if( (($distro eq "redhat")   && ($ver eq "7.3"))   || 
    (($distro eq "redhat")   && ($ver eq "7.2"))   ||
    (($distro eq "mandrake") && ($ver eq "8.2"))   ||
    (($distro eq "rhas")     && ($ver eq "2.1AS")) ||
  ) {
	remove_rpms( "perl-Qt-5.6" );
}
# For distros with 5.8
elsif( (($distro eq "redhat") && ($ver eq "8.0")) || 
       (($distro eq "redhat") && ($ver eq "9"))   || 
       ($distro eq "suse") 
     ) {
	remove_rpms( "perl-Qt" );
}


if( $distro eq "suse" ) {
	my @rpms = qw(xdevel
			qt3
			qt3-devel
			perl-Qt-qt3-compat
			);
	remove_rpms(@rpms);
}



#-------------------------------------------------------------
#  Input: Array of rpms to remove (short name no version)
# Output: n/a
# Return: 0 (success) otherwise die's  :)
#-------------------------------------------------------------
sub remove_rpms
{
	my @rpms = @_;
	my $cmd = "rpm -e " . join(" ", @rpms);

	my $rc = system($cmd);
	die "Error: command ($cmd)\n" if($rc);

	return(0);
}

#-------------------------------------------------------------
#  Input: Array of fully qualified files to remove
# Output: n/a
# Return: 0 (success) otherwise die's  :)
#-------------------------------------------------------------
sub remove_files
{
    my @files = @_;
    my $rc = 0; 

    foreach my $f (@files) {
        $rc = system("rm -f $f") or die "Error: calling system(): $!\n";
		print "DBG: system( rm -f $f )\n";
        die "Error: command ($cmd)\n" if($rc);
    }
    return(0);
}   

