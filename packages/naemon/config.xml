    <requires>
      <pkg>naemon</pkg>
      <pkg>nagios-plugins</pkg>
      <pkg>nagios-plugins-all</pkg>
      <pkg>nagios-plugins-nrpe</pkg>
      <pkg>nrpe</pkg>
    </requires>
