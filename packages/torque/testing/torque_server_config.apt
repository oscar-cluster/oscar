<testDef>

  <info>
This script tests that torque server_name is correctly set

Desired result : PASS
</info>

  <shortDescription>server_name correctly set?</shortDescription>

  <test type="script">
  
    <command interpreter="/bin/bash" wdir="/tmp" uname="root">
HOSTNAME=$(hostname -s)
TORQUE_SERVER_NAME=/var/lib/torque/server_name
if test -f /etc/torque/server_name
then
   TORQUE_SERVER_NAME=/etc/torque/server_name
fi
egrep "pbs_oscar|${HOSTNAME}" ${TORQUE_SERVER_NAME}
    </command>

    <output name="stdout" format="regexp">.*</output>
    <output name="stderr" format="literal"></output>
    <output name="status" format="literal">0</output>

  </test>

</testDef>

