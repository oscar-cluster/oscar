<?xml version="1.0" encoding="ISO-8859-1"?>
<oscar>
  <name>pfilter</name>
  <class>included</class>
  <summary>pfilter - packet filtering ruleset generator</summary>
  <description>The pfilter package is used to generate packet filtering
rulesets.  It uses an easy to understand text configuration
file as input, and is installed as a chkconfig controlled
system package.</description>
  <license>GPL</license>
  <group>System Environment/Security</group>
  <uri>http://oscar.openclustergroup.org/</uri>
  <authors>
    <author cat="maintainer">
      <name>Neil Gorsuch</name>
      <email>ngorsuch@ncsa.uiuc.edu</email>
    </author>
    <author cat="uploader">
      <name>Geoffroy Vallee</name>
      <email>valleegr@ornl.gov</email>
    </author>
  </authors>
  <serverDeps>
    <requires>
      <pkg>pfilter</pkg>
      <pkg>iptables</pkg>
    </requires>
  </serverDeps>
  <clientDeps>
    <requires>
      <pkg>pfilter</pkg>
      <pkg>iptables</pkg>
    </requires>
  </clientDeps>
  <apiDeps/>
  <changelog>
    <versionEntry version="1.707.0-4oscar">
      <changelogEntry authorName="Geoffroy Vallee" date="2007-09-14T17:07:52-04:00">
        <item>Migration to the new OPKG format (OPKGC).</item>
      </changelogEntry>
      <changelogEntry authorName="Erich Focht" date="2007-10-06T17:07:52-04:00">
        <item>Fixed wrong dependency information.</item>
      </changelogEntry>
    </versionEntry>
  </changelog>
</oscar>
