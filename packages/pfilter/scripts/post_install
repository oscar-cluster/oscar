# push out the pfilter configuration file

my $command = ". /etc/profile.d/c3.sh && cpush /etc/pfilter.conf /etc";
print "$command\n";
system( $command ) && croak("pfilter configuration file push failed.");

# if pfilter is running on this server, restart it here and on the clients

if ( grep ( /running/, `service pfilter status` ) ) {

    print "pfilter is running, restarting it here and on clients\n";

    $command = "service pfilter restart";
    print "$command\n";
    system( $command );

    $command = ". /etc/profile.d/c3.sh && cexec service pfilter restart";
    print "$command\n";
    system( $command );

}

exit 0;
