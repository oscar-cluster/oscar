#!/bin/sh

### Job name (Max 10 chars)
#SBATCH -J shelltest

### Output
#SBATCH -o shelltest.out
#SBATCH -e shelltest.err

### Queue name
#SBATCH --partition=workq

#########################################################################
# Guess SLURM home is it /usr or /opt/slurm ?
#########################################################################

if test -f '/usr/bin/srun'
then
    srun='/usr/bin/srun'
else
    srun='/opt/slurm/bin/srun'
fi

### Script commands
$srun hostname
$srun date +"Hello, date is %D, time is %T"
exit
