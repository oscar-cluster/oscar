use lib "$ENV{OSCAR_HOME}/lib";
use OSCAR::SystemServices;
use OSCAR::SystemServicesDefs;
use Carp;

print("[INFO] Enabling blcr service at boot time in image\n");
!enable_system_services( (BLCR) )
    or (carp "ERROR: Couldn't enable blcr service in image.\n", exit 1);

exit(0);
