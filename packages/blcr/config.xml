<?xml version="1.0" encoding="ISO-8859-1"?>
<oscar>
  <name>blcr</name>
  <class>included</class>
  <summary>BLCR for OSCAR Clusters</summary>
  <description>BLCR (Berkley Library for Checkpoint / Restart: This package implements system-level checkpointing of scientific applicati
  ons in a manner suitable for implementing preemption, migration and fault recovery by a batch scheduler.</description>
  <license>BSD</license>
  <group>Application/System</group>
  <uri>https://ftg.lbl.gov/projects/CheckpointRestart/index.html</uri>
  <authors>
    <author cat="maintainer">
      <name>Olivier Lahaye</name>
      <email>olivier.lahaye@cea.fr</email>
    </author>
    <author cat="maintainer">
      <name>Geoffroy Vallee</name>
      <email>valleegr@ornl.gov</email>
    </author>
  </authors>
  <serverDeps>
    <requires>
      <pkg>blcr</pkg>
      <pkg>blcr-libs</pkg>
      <pkg>blcr-testsuite</pkg>
      <pkg>blcr-modules</pkg>
    </requires>
  </serverDeps>
  <clientDeps>
    <requires>
      <pkg>blcr</pkg>
      <pkg>blcr-libs</pkg>
      <pkg>blcr-testsuite</pkg>
      <pkg>blcr-modules</pkg>
    </requires>
    <requires>
      <filters>
        <dist>suse</dist>
        <dist>sles</dist>
      </filters>
      <pkg>gcc-fortran</pkg>
    </requires>
  </clientDeps>
  <apiDeps/>
