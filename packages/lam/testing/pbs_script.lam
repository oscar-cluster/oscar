#!/bin/sh

### Job name
#PBS -N lamtest

### Output files
#PBS -o lamtest.out
#PBS -e lamtest.err

### Queue name
#PBS -q workq

### Script Commands
cd $PBS_O_WORKDIR
echo "Running LAM/MPI test"

# The LAM/MPI test itself

lamboot $PBS_NODEFILE

do_cmds() {
    cat <<EOF

--> $banner

EOF

    eval $cmds
    if test "$?" != "0"; then
	echo "TEST FAILED!"
	echo "Commands: $cmds"
	lamhalt
	exit 1
    fi
}

banner="MPI C bindings test:"
cmds="mpicc cpi.c -o lam-cpi && mpirun C lam-cpi && lamclean"
do_cmds

banner="MPI C++ bindings test:"
cmds="mpiCC cxxhello.cc -o lam-cxxhello && mpirun C lam-cxxhello && lamclean"
do_cmds

banner="MPI Fortran bindings test:"
cmds="mpif77 f77hello.f -o lam-f77hello && mpirun C lam-f77hello && lamclean"
do_cmds

lamhalt 

echo "LAM/MPI test complete"
echo "Unless there are errors above, test completed successfully."

echo
exit 0
