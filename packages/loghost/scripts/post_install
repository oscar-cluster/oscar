#!/bin/bash
file=/etc/syslog.conf
loghost=pbs_oscar

grep $loghost /etc/hosts 2>&1 >/dev/null
retval=$?
if [ retval -ne 0 ]; then
  echo "Error:  $loghost not found in /etc/hosts"
  exit 1
fi
loghost_ip=`grep $loghost /etc/hosts |head -1 |awk '{print $1}'`

cexec " \
  if [ \"\`grep -c oscar_loghost $file\`\" = \"0\" ] ; then echo >> $file ;\
    echo \"*.* @`grep pbs_oscar /etc/hosts |head -1 |awk '{print $1}'` \
    # oscar_loghost\" >> $file; \
    echo \"Setting loghost to $loghost_ip\"; \
    /sbin/service syslog restart; \
  fi"

