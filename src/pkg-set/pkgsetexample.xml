<?xml version="1.0" encoding="ISO-8859-1"?>

<!--
	This is an example of an XML file to describe an OSCAR Package-Set.
-->

<packageSet>
	<name> Example </name>
	<version>
		<major> 1 </major>
	</version>
	<distro> fc6 </distro>
	<arch> x86 </arch>

	<package name="c3">
		<repo> http://www.myrepo.org/oscar </repo>
		<version>
			<compare> equal </compare>
			<major>4</major>
			<minor>0</minor>
			<subversion>1</subversion>
			<release>5</release>
			<epoch>1</epoch>
		</version>
	</package>

	<package name="base">
		<version>
			<compare> greater </compare>
			<major>1</major>
			<release>0</release>
		</version>
	</package>

	<package name="pvm">
		<repo> http://pvmrepos.org/oscar </repo>
		<version>
			<compare> equal </compare>
			<major>3</major>
			<minor>4</minor>
			<subversion>5+6</subversion>
			<release>2</release>
			<epoch>1</epoch>
		</version>
	</package>
</packageSet>
