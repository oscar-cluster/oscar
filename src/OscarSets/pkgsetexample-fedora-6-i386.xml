<?xml version="1.0" encoding="UTF-8"?>

<!--
	This is an example of an XML file to describe an OSCAR Package-Set.
-->

<packageSet>
	<name> pkgsetexample-fedora-6-i386 </name>
	<version> 2 </version>
	<distro> 
		<name> fedora </name>
		<version> 6 </version>
	</distro>
	<arch> i386 </arch>

	<package name="c3">
		<repo> http://www.myrepo.org/oscar </repo>
		<version>
			<compare> eq </compare>
			<number> 4.0.1-5 </number>
		</version>
	</package>

	<package name="base">
		<version>
			<compare> gt </compare>
			<number> 1 </number>
		</version>
	</package>

	<package name="pvm">
		<repo> http://pvmrepos.org/oscar </repo>
		<version>
			<compare> eq </compare>
			<number> 3.4.5+6-2 </number>
		</version>
	</package>
</packageSet>
