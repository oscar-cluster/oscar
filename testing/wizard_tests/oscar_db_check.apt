<testDef>

  <info>
This script tests that the OSCAR database is up

Desired result : PASS
</info>

  <shortDescription>Is OSCAR db up?</shortDescription>

  <test type="script">
  
    <command interpreter="perl" wdir="/tmp" uname="root">
#!/usr/bin/perl -w

BEGIN {
    if (defined $ENV{OSCAR_HOME}) {
        unshift @INC, "$ENV{OSCAR_HOME}/lib";
    }
}

use warnings;
use English '-no_match_vars';


!system("mysql -u root -e \"SHOW VARIABLES LIKE 'version'\"")
    or die "MySQL db engine not running!";

!system("mysql -u root -e \"SHOW VARIABLES LIKE 'version'\" oscar")
    or die "OSCAR db not set up!";

    </command>

    <output name="stdout" format="regexp">.*</output>
    <output name="stderr" />
    <output name="status" format="literal">0</output>

  </test>

</testDef>

