#!/bin/sh

### Job name
#PBS -N mpichtest

### Output files
#PBS -o mpichtest.out
#PBS -e mpichtest.err

### Queue name
#PBS -q workq

### Script Commands
cd $PBS_O_WORKDIR
echo "Running MPICH test"

# The MPICH test iteself

NP=`(wc -l < $PBS_NODEFILE) | awk '{print $1}'`

mpicc cpi.c -o mpich-cpi
mpirun -machinefile $PBS_NODEFILE -np $NP ./mpich-cpi

echo "MPICH test complete"
echo "Unless there are errors above, test completed successfully."

echo
exit 0
