#!/bin/sh

### Job name
#PBS -N lamtest

### Output files
#PBS -o lamtest.out
#PBS -e lamtest.err

### Queue name
#PBS -q workq

### Script Commands
cd $PBS_O_WORKDIR
echo "Running LAM/MPI test"

# The LAM/MPI test itself

lamboot $PBS_NODEFILE
mpicc cpi.c -o lam-cpi
mpirun C lam-cpi
lamclean
lamhalt 

echo "LAM/MPI test complete"
echo "Unless there are errors above, test completed successfully."

echo
exit 0
